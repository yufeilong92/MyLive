<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="rectangle">
        <corners
            android:radius="14dp"
            />
        <gradient
            android:angle="0"
            android:centerX="35%"
            android:centerColor="#47A891"
            android:startColor="#5476E8"
            android:endColor="#33FFA0"
            android:type="linear"
            />
        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
            />
        <size
            android:width="270dp"
            android:height="60dp"
            />
    </shape>
</item>
</selector>